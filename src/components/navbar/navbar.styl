@import "../../common/stylus/variable.styl"
.nav-bar
  height: 100vh
  overflow hidden
  position relative
  a
    text-decoration none
  .fa
    margin-right 12px
  .nav-logo
    font-size 30px
    font-style italic
    margin 12px 0
    padding 0 24px
    text-align left
    a
      color #ffffff
  .nav-option
    height 40px
    padding 0 30px
    color #b3b3b3
    cursor pointer
    display flex
    align-items center
    justify-content flex-start
    font-weight 500
    font-size 15px
    &:hover
      color #ffffff
      a
        color #ffffff
    .fa
      font-size 24px
     a
       color #b3b3b3
  .active.nav-option
    color #ffffff
    position relative
    &::before
      content ''
      height calc(100% - 6px)
      width 6px
      position absolute
      left 0
      top 3px
      background-color seagreen
  // 版权信息
  .copyright
    width: calc(100% - 24px)
    padding 12px
    position absolute
    bottom: 0
    left: 0
    text-align center
    font-size $text-size-sm
    border-top: 1px solid rgba(51, 51, 51, 1)
